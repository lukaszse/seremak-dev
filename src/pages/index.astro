              class="w-full px-4 py-2 bg-slate-900 border border-slate-700 rounded-lg text-slate-100 focus:outline-none focus:border-blue-500 transition"
              placeholder="Your name"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-slate-300 mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              maxlength="100"
              class="w-full px-4 py-2 bg-slate-900 border border-slate-700 rounded-lg text-slate-100 focus:outline-none focus:border-blue-500 transition"
              placeholder="your@email.com"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-slate-300 mb-2">Message</label>
            <textarea
              id="message"
              name="message"
              required
              minlength="10"
              maxlength="1000"
              rows="4"
              class="w-full px-4 py-2 bg-slate-900 border border-slate-700 rounded-lg text-slate-100 focus:outline-none focus:border-blue-500 transition resize-none"
              placeholder="Tell me about your project..."
            ></textarea>
          </div>

          <button
            type="submit"
            id="submitBtn"
            class="w-full px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-semibold disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Send Message
          </button>
        </form>

        <div id="formSuccess" class="hidden mt-4 p-4 bg-green-900/30 border border-green-500/50 rounded-lg text-green-300 text-sm">
          ‚úì Message sent successfully! I'll get back to you soon.
        </div>

        <div id="formError" class="hidden mt-4 p-4 bg-red-900/30 border border-red-500/50 rounded-lg text-red-300 text-sm">
          ‚úó Something went wrong. Please try again or contact me via LinkedIn.
        </div>
      </div>
    </div>
  </main>

  <script>
    // Modal functionality
    const modal = document.getElementById('contactModal');
    const openBtn = document.getElementById('openContactModal');
    const openBtnCTA = document.getElementById('openContactModalCTA');
    const closeBtn = document.getElementById('closeModal');
    const form = document.getElementById('contactForm') as HTMLFormElement;
    const successMsg = document.getElementById('formSuccess');
    const errorMsg = document.getElementById('formError');
    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;

    // Rate limiting - max 1 submission per 60 seconds
    let lastSubmissionTime = 0;
    const RATE_LIMIT_MS = 60000; // 60 sekund

    // Track form open time (bot protection - human needs time to fill form)
    let formOpenTime = 0;
    const MIN_FORM_FILL_TIME = 3000; // Minimum 3 sekundy na wype≈Çnienie

    function openModal() {
      if (modal) {
        modal.classList.remove('hidden');
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden';
        formOpenTime = Date.now(); // Zapisz czas otwarcia formularza
      }
    }

    function closeModal() {
      if (modal) {
        modal.classList.add('hidden');
        modal.style.display = 'none';
        document.body.style.overflow = '';
        successMsg?.classList.add('hidden');
        errorMsg?.classList.add('hidden');
        formOpenTime = 0;
      }
    }

    openBtn?.addEventListener('click', openModal);
    openBtnCTA?.addEventListener('click', openModal);
    closeBtn?.addEventListener('click', closeModal);

    // Close on backdrop click
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
        closeModal();
      }
    });

    // Form submission with Formspree + anti-spam protection
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Check rate limit
      const now = Date.now();
      if (now - lastSubmissionTime < RATE_LIMIT_MS) {
        if (errorMsg) {
          errorMsg.textContent = '‚è± Please wait a minute before sending another message.';
          errorMsg.classList.remove('hidden');
        }
        return;
      }

      // Check if form was filled too quickly (bot detection)
      const fillTime = now - formOpenTime;
      if (fillTime < MIN_FORM_FILL_TIME) {
        if (errorMsg) {
          errorMsg.textContent = 'ü§ñ Form submitted too quickly. Please take your time.';
          errorMsg.classList.remove('hidden');
        }
        return;
      }

      const formData = new FormData(form);

      // Check honeypot field (bots often fill all fields)
      if (formData.get('_gotcha')) {
        console.log('Bot detected via honeypot');
        return; // Silent fail for bots
      }

      // Disable submit button during submission
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Sending...';
      }

      // Formspree Form ID
      const FORMSPREE_FORM_ID = 'xojnzvjz';

      try {
        const response = await fetch(`https://formspree.io/f/${FORMSPREE_FORM_ID}`, {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });

        if (response.ok) {
          // Sukces - wiadomo≈õƒá wys≈Çana
          lastSubmissionTime = now; // Update rate limit timestamp
          successMsg?.classList.remove('hidden');
          errorMsg?.classList.add('hidden');
          form.reset();

          // Zamknij modal po 2 sekundach
          setTimeout(() => {
            closeModal();
          }, 2000);
        } else {
          // B≈ÇƒÖd od serwera
          throw new Error('Server error');
        }
      } catch (error) {
        // B≈ÇƒÖd po≈ÇƒÖczenia lub inny problem
        if (errorMsg) {
          errorMsg.textContent = '‚úó Something went wrong. Please try again or contact me via LinkedIn.';
          errorMsg.classList.remove('hidden');
        }
        successMsg?.classList.add('hidden');
        console.error('Form submission error:', error);
      } finally {
        // Re-enable submit button
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.textContent = 'Send Message';
        }
      }
    });
  </script>
</Layout>
